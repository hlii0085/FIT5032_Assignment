
@{
    ViewBag.Title = "Add Role To User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Role To User</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Username</label>
            <div class="col-md-10">
                @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Role Name</label>
            <div class="col-md-10">
                @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", htmlAttributes: new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add To User" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Check User Roles", "GetUserRoles") | @Html.ActionLink("Back To Index", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

